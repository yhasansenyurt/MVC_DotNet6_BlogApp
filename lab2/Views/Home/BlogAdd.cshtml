@{
    ViewData["Title"] = "Add Blog";
}
<h1>Add Blog</h1>


<form method="GET">

  <div class="form-group">
    <label for="input1">OWNER ID</label>
    <input type="text" class="form-control" id="input1" placeholder="@ViewBag.user" disabled> <!-- Placeholder came as owner id. -->
